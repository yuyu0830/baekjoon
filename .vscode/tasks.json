{
	"version": "2.0.0",
	"tasks": [
		{
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
			"args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",

                
                "&&",   //to join building and running of the file
                "${fileDirname}/${fileBasenameNoExtension}.out",
                            
                "<",
                "${fileDirname}/test_input.txt",
			
                //">",
                //"${fileDirname}/test_output.txt"

            ],
			"options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
		}
	]
}